    <script>
        function initMap() {
            var location = { lat: 19.0434, lng: -98.1981 }; // Coordenadas del Ayuntamiento de Puebla
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 15,
                center: location
            });
            var marker = new google.maps.Marker({
                position: location,
                map: map
            });
        }
    </script>
